#
# g.region vect=whole_region_buff
# v.voronoi input=ncdc_prcp_stations output=ncdc_prcp_stations_voronoi # Used
# v.voronoi input=ncdc_evap_stations output=ncdc_evap_stations_voronoi # Not used
